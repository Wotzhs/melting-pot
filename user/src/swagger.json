          "application/json"
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "ID of user to return",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "User is successfully retrieved",
            "schema": {
              "$ref": "#/definitions/GetUser"
            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "$ref": "#/definitions/ApiResponse"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "CreateUserRequest": {
      "type": "object",
      "required": [
        "fullname"
      ],
      "properties": {
        "fullname": {
          "type": "string",
          "example": "John Doe"
        },
        "code": {
          "type": "string",
          "example": "EARLYBIRD"
        }
      }
