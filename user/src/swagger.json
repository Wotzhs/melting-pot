    "CreateUserResponse": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "example": "some-id"
        }
      }
    },
    "ListUsers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/User"
      }
    },
    "GetUser": {
      "$ref": "#/definitions/User"
    },
    "User": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "example": "some user id"
        },
        "fullname": {
          "type": "string",
          "example": "John Doe"
        },
        "cardNumber": {
          "type": "string"
        },
        "walletBalance": {
          "type": "number",
          "example": 500
        },
        "walletId": {
          "type": "string",
          "example": "some wallet id"
        }
      }
    },
    "ApiResponse": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32",
          "example": 500
        },
        "type": {
          "type": "string",
          "example": "Internal"
        },
        "message": {
          "type": "string",
          "example": "Internal server error"
        }
      }
